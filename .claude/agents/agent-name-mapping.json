  "colorRules": {
    "🔴": {
      "name": "赤色 - リーダー",
      "role": "指示を出す、全体を見る",
      "parallel": false,
      "count": 2
    },
    "🟢": {
      "name": "緑色 - 実行役",
      "role": "実際に作業する、動く",
      "parallel": true,
      "count": 10
    },
    "🔵": {
      "name": "青色 - 分析役",
      "role": "調べる、考える",
      "parallel": true,
      "count": 6
    },
    "🟡": {
      "name": "黄色 - サポート役",
      "role": "手伝う、つなぐ",
      "parallel": "conditional",
      "count": 3
    }
  },
  "usageExamples": {
    "parallel": [
      {
        "description": "3つの Issue を同時処理",
        "agents": ["つくるん", "つくるん", "めだまん"],
        "technicalNames": ["CodeGenAgent", "CodeGenAgent", "ReviewAgent"]
      },
      {
        "description": "ビジネス企画を並列実行",
        "agents": ["しらべるん", "なりきりん", "じぶんさん"],
        "technicalNames": ["MarketResearchAgent", "PersonaAgent", "SelfAnalysisAgent"]
      }
    ],
    "sequential": [
      {
        "description": "コーディングフロー",
        "steps": [
          { "agent": "しきるん", "technical": "CoordinatorAgent", "note": "最初に実行" },
          { "agent": "つくるん", "technical": "CodeGenAgent", "note": "並列可能" },
          { "agent": "めだまん", "technical": "ReviewAgent", "note": "並列可能" },
          { "agent": "まとめるん", "technical": "PRAgent", "note": "条件付き" },
          { "agent": "はこぶん", "technical": "DeploymentAgent", "note": "条件付き" }
        ]
      }
    ]
  }
}
